<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NoBackgroundTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
    
     <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="bottom_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tab_title_size</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 首页第一列金额 -->
    <style name="main_layout_firsttext">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">right|bottom</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <!-- 首页第二列金额 -->
    <style name="main_layout_secondtext">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">center|bottom</item>
    </style>

    <!-- 首页第三列金额 -->
    <style name="main_layout_thirdtext">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|bottom</item>
    </style>

    <style name="margin_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="padding_margin_style" parent="@style/margin_style">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="regist_text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/sixSize</item>
        <item name="android:textColorHint">@color/lightblack</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 加载dialog展现动画 -->
    <style name="animdialogstyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    
    <!-- 我的账户 -->
    <style name="blackSixSize">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sixSize</item>
    </style>
    
    <style name="blackFiveSize">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/fivesize</item>
    </style>

    <style name="myAccountlabel" parent="@style/blackSixSize">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- 更多 -->
    <style name="graySixSize">
        <item name="android:textColor">@color/lightblack</item>
        <item name="android:textSize">@dimen/sixSize</item>
    </style>

        <!-- 选择日期控件相关 -->
    <style name="dateStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <!-- 产品概述 -->
    <style name="descrip_label">
        <item name="android:textSize">@dimen/sixSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>
    
    <style name="transBlackFiveSize">
        <item name="android:textSize">@dimen/fivesize</item>
        <item name="android:textColor">@color/transblack</item>
    </style>
    
     <style name="transBlackSixSize">
        <item name="android:textSize">@dimen/sixSize</item>
        <item name="android:textColor">@color/transblack</item>
    </style>
    

     
     <!-- 添加银行卡 -->
     <style name="editTextStyle" parent="@style/blackSixSize">
         <item name="android:singleLine">true</item>
         <item name="android:gravity">center</item>
         <item name="android:background">@drawable/et_rect</item>
         <item name="android:paddingLeft">10dp</item>
         <item name="android:paddingRight">10dp</item>
     </style>
     
     <style name="centerVerCutline">
         <item name="android:background">@color/gray_line</item>
         <item name="android:layout_marginTop">8dp</item>
         <item name="android:layout_marginBottom">8dp</item>
     </style>
     
         <!-- ChinaPay plugin begin -->
        <style name="cp_Animation" parent="android:Theme.Light">
        <item name="android:windowAnimationStyle">@style/cp_AnimationActivity</item>
    </style>

    <style name="cp_AnimationActivity">
        <item name="android:activityOpenEnterAnimation">@anim/cpay_push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/cpay_push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/cpay_slide_up_in</item>
        <item name="android:activityCloseExitAnimation">@anim/cpay_slide_down_out</item>
    </style>
    

     <style name="cpay_MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="surveyResult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/eightSize</item>
        <item name="android:textColor">@color/transblack</item>
    </style>
      
    <!-- ChinaPay plugin end -->
</resources>